# server/.env.example
# Copy this file to .env and fill in your values

# ===================================
# REQUIRED VARIABLES
# ===================================

# ===== Database (REQUIRED) =====
# MongoDB connection string
# Development: Use local MongoDB
MONGO_URI=mongodb://localhost:27017/cado4fun
# Production: Use MongoDB Atlas
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/cado4fun?retryWrites=true&w=majority

# ===== Authentication (REQUIRED) =====
# JWT secret key for token signing (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_change_in_production_must_be_32_chars_minimum

# ===================================
# OPTIONAL VARIABLES (with defaults)
# ===================================

# ===== Server Configuration =====
PORT=3001
NODE_ENV=development

# ===== CORS & Frontend =====
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
# Production example:
# CLIENT_URL=https://yourdomain.com
# FRONTEND_URL=https://yourdomain.com

# ===== Session =====
# Session secret for cookie-parser (auto-generated if not set)
# SESSION_SECRET=your_session_secret_here

# ===== Rate Limiting =====
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=15

# ===== Logging =====
# LOG_LEVEL=info

# ===== PvP Cron =====
PVP_SWEEP_INTERVAL_MS=60000
PVP_MAX_WAITING_AGE_MS=1800000
PVP_COINFLIP_GRACE_MS=10000
PVP_DICE_GRACE_MS=4000
PVP_DICE_IDLE_MS=60000
PVP_DICE_UNSTARTED_REFUND_MS=900000
PVP_CRON_LOG_LEVEL=error

# ===== HTTP Logger =====
HTTP_LOG_LEVEL=info
HTTP_LOG_IGNORE_PATHS=/api/admin/pvp/health

# ===== Game Configuration =====
# MIN_BET_AMOUNT=1
# MAX_BET_AMOUNT=10000

# ===== Reward Configuration =====
# HOURLY_REWARD=50
# DAILY_REWARD=500
# WEEKLY_REWARD=5000

# ===== Cron File Logging =====
PVP_CRON_FILE_LOG=0
PVP_CRON_LOG_DIR=./logs
PVP_CRON_LOG_MAX_MB=10